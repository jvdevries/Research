<Window x:Class="EasyFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyFramework"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400"
        d:DataContext="{d:DesignInstance local:MainWindowVM, IsDesignTimeCreatable=True}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:ViewModelA}">
            <local:ViewA />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <CheckBox IsChecked="{Binding ForceViewRefresh}" VerticalAlignment="Center"/>
            <Label Content="Nullify ContentControl Property before setting to new ViewModel"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <CheckBox IsChecked="{Binding InvalidatesImplicitDataTemplateResources}" VerticalAlignment="Center"/>
            <Label Content="InvaliDatesImplicitDataTemplateResources"/>
        </StackPanel>
        </StackPanel>
        <ContentControl Grid.Row="3" Grid.Column="0" Content="{Binding CurrentUserControlVM}"/>
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Grid.Column="1">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,10,0,0"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Working Switching Sequence" Command="{Binding SwitchViewAndOrViewModelBadPattern}"/>
            <Button Content="Broken Switching Sequence" Command="{Binding SwitchViewAndOrViewModelGoodPattern}"/>
            <Button Content="Switch View" Command="{Binding SwitchView}"/>
            <Button Content="Switch ViewModel" Command="{Binding SwitchViewModel}"/>
        </StackPanel>
    </Grid>
</Window>